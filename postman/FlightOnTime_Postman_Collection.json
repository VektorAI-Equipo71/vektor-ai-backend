    {
      "name": "Prediction API",
      "description": "Endpoints para predicción de vuelos individuales",
      "item": [
        {
          "name": "Predicción Individual - Vuelo Puntual (DL ATL→JFK)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('prediccion');",
                  "    pm.expect(jsonData).to.have.property('probabilidad_retraso');",
                  "    pm.expect(jsonData).to.have.property('confianza');",
                  "    pm.expect(jsonData).to.have.property('distancia_km');",
                  "    pm.expect(jsonData).to.have.property('clima_origen');",
                  "    pm.expect(jsonData).to.have.property('metadata');",
                  "});",
                  "",
                  "pm.test(\"Prediccion is 0 or 1\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.prediccion).to.be.oneOf([0, 1]);",
                  "});",
                  "",
                  "pm.test(\"Probabilidad is between 0 and 1\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.probabilidad_retraso).to.be.at.least(0);",
                  "    pm.expect(jsonData.probabilidad_retraso).to.be.at.most(1);",
                  "});",
                  "",
                  "pm.test(\"Distancia is positive\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.distancia_km).to.be.above(0);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"aerolinea\": \"DL\",\n  \"origen\": \"ATL\",\n  \"destino\": \"JFK\",\n  \"fecha_partida\": \"2026-01-15T14:30:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/predict",
              "host": ["{{base_url}}"],
              "path": ["api", "predict"]
            },
            "description": "Predicción de vuelo Delta Air Lines de Atlanta a New York JFK.\n\n**Campos requeridos:**\n- aerolinea: Código de aerolínea\n- origen: Código IATA origen (3 letras)\n- destino: Código IATA destino (3 letras)\n\n**Campo opcional:**\n- fecha_partida: Fecha ISO-8601"
          },
          "response": []
        },
        {
          "name": "Predicción Individual - Vuelo Largo (LAX→ORD)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Distance is calculated correctly (should be ~2800km)\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.distancia_km).to.be.above(2500);",
                  "    pm.expect(jsonData.distancia_km).to.be.below(3200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
