    {
      "name": "Prediction API",
      "item": [
        {
          "name": "Predicción Individual - Vuelo Puntual",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has prediccion field\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('prediccion');",
                  "    pm.expect(jsonData).to.have.property('probabilidad_retraso');",
                  "    pm.expect(jsonData).to.have.property('confianza');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "{{content_type}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"aerolinea\": \"DL\",\n  \"origen\": \"ATL\",\n  \"destino\": \"JFK\",\n  \"fecha_partida\": \"2026-01-15T14:30:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/predict",
              "host": ["{{base_url}}"],
              "path": ["api", "predict"]
            },
            "description": "Predicción de vuelo Delta Air Lines de Atlanta a New York JFK"
          },
          "response": []
        },
        {
          "name": "Predicción Individual - Vuelo Retrasado",
