    {
      "name": "Batch Processing API",
      "item": [
        {
          "name": "Procesamiento por Lote",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "batch_id",
                  "value": "BATCH-TEST123",
                  "type": "text",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/batch-predict?batch_id={{batch_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "batch-predict"],
              "query": [
                {
                  "key": "batch_id",
                  "value": "{{batch_id}}",
                  "disabled": true
                }
              ]
            },
            "description": "Procesa un archivo CSV con múltiples vuelos. El batch_id se puede enviar como query parameter o en el form-data."
          },
          "response": []
        }
      ]
    },
